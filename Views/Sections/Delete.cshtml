@model Task3.ViewModels.SectionDeleteViewModel

<h1>Deleting @Model.Name</h1>

<form asp-action="Delete" asp-controller="Sections" method="POST">
    <input type="hidden" asp-for="Id" />

    <div class="list-group">
        <div class="list-group-item d-flex justify-content-between">
            <div class="font-weight-bold">@Model.Name</div>
        </div>
        @if (!String.IsNullOrEmpty(Model.Description))
        {
            <div class="list-group-item">
                <div class="text-info">@Model.Description</div>
            </div>
        }
    </div>

    <hr>
    <div class="flex-lg-row">
        <a asp-controller="Sections" asp-action="Index" class="btn btn-secondary">< Back</a>
        <button class="btn btn-danger" type="submit">Delete Section</button>
    </div>
</form>