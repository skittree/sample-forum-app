@model Task3.ViewModels.SectionCreateViewModel

<h1>Creating Section</h1>

<form asp-action="Create" asp-controller="Sections" method="POST">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" type="text" class="form-control" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" type="text" class="form-control" />
    </div>

    <div class="flex-lg-row">
        <a asp-controller="Sections" asp-action="Index" class="btn btn-secondary">< Back</a>
        <button class="btn btn-success" type="submit">+ Create Section</button>
    </div>
</form>