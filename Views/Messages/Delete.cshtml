@model Task3.ViewModels.MessageDeleteViewModel

<h1>Are you sure you want to delete this message?</h1>
<form asp-action="Delete" asp-controller="Messages" method="POST">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="TopicId" />

    <div class="list-group">
        <div class="list-group-item d-flex justify-content-between">
            <div class="font-weight-bold">@Model.Text</div>
        </div>
    </div>

    <hr>
    <div class="flex-lg-row">
        <a asp-controller="Messages" asp-action="Index" asp-route-id="@Model.TopicId" class="btn btn-secondary">< Back</a>
        <button class="btn btn-danger" type="submit">Delete Message</button>
    </div>
</form>