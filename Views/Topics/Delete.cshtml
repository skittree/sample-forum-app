@model Task3.ViewModels.TopicDeleteViewModel

<h1>Are you sure you want to delete @Model.Name?</h1>
<form asp-action="Delete" asp-controller="Topics" method="POST">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="SectionId" />
    <div class="list-group">
        <div class="list-group-item d-flex justify-content-between">
            <div class="font-weight-bold">@Model.Name</div>
        </div>
        @if (!String.IsNullOrEmpty(Model.Description))
        {
            <div class="list-group-item">
                <div class="text-info">@Model.Description</div>
            </div>
        }
    </div>

    <hr>
    <div class="flex-lg-row">
        <a asp-controller="Topics" asp-action="Index" asp-route-id="@Model.SectionId" class="btn btn-secondary">< Back</a>
        <button class="btn btn-danger" type="submit">Delete Topic</button>
    </div>
</form>